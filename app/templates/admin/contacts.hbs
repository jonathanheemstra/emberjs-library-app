<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>E-mail</th>
      <th>Message</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |message|}}
    <tr>
      <th>{{message.email}}</th>
      <td>{{message.message}}</td>
      <td><button class="btn btn-danger btn-xs" {{action 'deleteMessage' message}}>Delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>
